@charset "ISO-8859-1";

.table-responsive {
	display: table;
}
/*   Code for Footer  */
#footerid {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	text-align: center;
	background-color: #337ab7;
	color: white;
	font-size: smaller;
}

.footer-div {
	/* 	width: 340px; */
	margin: 100px auto;
}
/* Code for Footer  */
.table {
	border: 1px solid black;
}

.table thead th {
	/* 	border-left: 0.5px solid #f0f8ff; */
	border: 0.5px solid #000;
	text-align: center;
	background-color: #eaccb2;
	/* 	background-color: #d2b59c; */
	white-space: nowrap;
}

table.dataTable {
	border-collapse: collapse;
}

.table-bordered th, .table-bordered td {
	/* border: 1px solid #d9e0e7; */
	border-left: 1px solid #000;
	border-right-color: black;
}

table.dataTable thead th, table.dataTable thead td {
	padding: 10px 18px;
	border-bottom: 0px solid #111;
}

.table td {
	text-align: left;
	background-color: aliceblue;
	text-align: left;
	border: 1px solid black; /*for border of rows */
}

.card { /
	width: fit-content;
	/* 	width: 80%; */
	display: inline-block;
	border: #b3acac solid 1px;
}

.card-header {
	/* 	background-color: #d2b59c; */
	background-color: #eaccb2;
	padding: 4px;
	color: black;
}

.card-body {
	-webkit-box-flex: 1;
	-ms-flex: 1 1 auto;
	padding: 1rem;
}

.btn-primary, .btn-default {
	color: #1a1b18;
	background-color: #f2a554;
	border-color: #f2a554;
	font-size: smaller;
}

#add-modal.modal-content {
	width: 100%;
}

.modal-header {
	background-color: #c7c2bd;
	padding: 4px;
	color: black;
	text-align: center;
}

.modal-title {
	width: -webkit-fill-available;
	align-self: center;
	padding: 5px;
}

}
.dataTables_wrapper .dataTables_length, .dataTables_wrapper .dataTables_filter,
	.dataTables_wrapper .dataTables_info, .dataTables_wrapper .dataTables_processing,
	.dataTables_wrapper .dataTables_paginate {
	font-size: smaller;
	padding-top: 3px;
}

label {
	display: inline-block;
	margin-bottom: 0.5rem;
	font-size: inherit;
}

.dataTables_wrapper .dataTables_paginate .ellipsis {
	padding: 0px;
}

.dataTables_wrapper .dataTables_info {
	font-size: smaller;
}

.dataTables_wrapper .dataTables_paginate .paginate_button {
	min-width: 1.5em;
	padding: 0.05em 0.35em;
	margin-left: -8px; /
	display: inline;
}

.dataTables_wrapper .dataTables_info {
	padding-top: 0.455em;
}

/*For multiple select dropdown height*/
.bootstrap-select>.dropdown-toggle {
	width: 320px;
	white-space: nowrap;
	height: 35px;
	border-color: slategray;
	font-size: smaller;
}

.dropdown-menu.show {
	width: 320px;
}

.bootstrap-select>.dropdown-toggle.bs-placeholder, .bootstrap-select>.dropdown-toggle.bs-placeholder:hover,
	.bootstrap-select>.dropdown-toggle.bs-placeholder:focus,
	.bootstrap-select>.dropdown-toggle.bs-placeholder:active {
	color: #999;
	height: 35px;
	width: 320px;
	border-color: slategray;
	font-size: smaller;
}

